<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tea" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8ABAD3</item>
        <item name="colorPrimaryVariant">#8ABAD3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/light_yellow</item>
        <item name="colorOnSecondary">@color/black_overlay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tea.Launch" parent="Theme.Tea">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="Theme.Tea.Fullscreen" parent="Theme.Tea">
        <item name="android:actionBarStyle">@style/Widget.Theme.Tea.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Tea.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_pink</item>
        <item name="fullscreenTextColor">@color/middle_gray</item>
    </style>
    
</resources>