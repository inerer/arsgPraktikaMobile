<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tea.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.tea.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_drafts"
        android:name="com.example.tea.ui.drafts.DraftFragment"
        android:label="@string/drafts"
        tools:layout="@layout/fragment_draft" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.example.tea.ui.create.CreateFragment"
        android:label="@string/create"
        tools:layout="@layout/fragment_create" />

</navigation>